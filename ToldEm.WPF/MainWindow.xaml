<Window x:Class="ToldEm.WPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="350" Width="525" Initialized="Window_Initialized">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="5*"/>
            <RowDefinition Height="1*"/>
        </Grid.RowDefinitions>
        <TextBox x:Name="txtLog" Grid.Row="1" IsReadOnly="True" xml:space="preserve" VerticalScrollBarVisibility="Auto"></TextBox>
        <Canvas x:Name="cvsMain" Grid.Row="0" Background="Black"></Canvas>
    </Grid>
</Window>
